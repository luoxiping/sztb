<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/start_linear_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    
    <RelativeLayout
        android:id="@+id/rl_back"
        android:layout_width="match_parent"
        android:layout_height="44dp" >
        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/image_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/arrow_left" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textSize="14sp"
                android:textColor="@color/mine_bg" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textSize="16sp"
            android:textColor="#3CB371" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_back" >
        <EditText
            android:id="@+id/edit_phone"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:layout_marginLeft="16dp"
	        android:layout_marginRight="16dp"
	        android:layout_marginTop="20dp"
	        android:background="@drawable/bg_register"
	        android:hint="请输入手机号码"
	        android:padding="8dp"
	        android:textSize="12sp"
	        android:textColorHint="@color/light_gray" />
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/edit_phone"
	        android:layout_alignRight="@id/edit_phone"
	        android:text="输入手机号码错误"
	        android:textSize="8sp"
	        android:textColor="#999"
	        android:layout_marginTop="4dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_yzm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_phone"
        android:layout_marginTop="16dp" >
        <EditText
            android:id="@+id/edit_yzm"
	        android:layout_width="200dp"
	        android:layout_height="40dp"
	        android:layout_marginLeft="16dp"
	        android:layout_marginRight="16dp"
	        android:background="@drawable/bg_register"
	        android:hint="请输入验证码"
	        android:padding="8dp"
	        android:textSize="12sp"
	        android:textColorHint="@color/light_gray" />
	    <TextView
	        android:id="@+id/get_yzm"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="获取验证码"
	        android:textSize="12sp"
	        android:textColor="@color/white"
	        android:background="@drawable/bg_blue"
	        android:padding="8dp"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="16dp" />
    </RelativeLayout>
	<EditText
            android:id="@+id/edit_pwd"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:layout_marginLeft="16dp"
	        android:layout_marginRight="16dp"
	        android:layout_marginTop="20dp"
	        android:layout_below="@id/rl_yzm"
	        android:background="@drawable/bg_register"
	        android:hint="请输入登录密码"
	        android:padding="8dp"
	        android:textSize="12sp"
	        android:textColorHint="@color/light_gray" />
	<TextView
	        android:id="@+id/text_register"
	        android:layout_width="match_parent"
	        android:layout_height="42dp"
	        android:layout_marginLeft="16dp"
	        android:layout_marginRight="16dp"
	        android:layout_marginTop="20dp"
	        android:layout_below="@id/edit_pwd"
	        android:gravity="center"
	        android:text="注册"
	        android:textSize="14sp"
	        android:textColor="@color/white"
	        android:background="@drawable/bg_green"
	        android:onClick="onClick" />
	<TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="《注册表示同意用户协议》"
	        android:layout_below="@id/text_register"
	        android:textSize="12sp"
	        android:textColor="#333"
	        android:layout_marginTop="6dp"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="16dp" />
	<RelativeLayout
	    android:id="@+id/rl_login"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="46dp" >
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        <LinearLayout
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1.0"
	            android:orientation="vertical"
	            android:gravity="center_horizontal" >
	            <ImageView
	                android:layout_width="34dp"
	                android:layout_height="34dp"
	                android:src="@mipmap/umeng_socialize_sina_on" />
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="新浪微博"
	                android:textSize="12sp"
	                android:textColor="#333" />
	        </LinearLayout>
	        <LinearLayout
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1.0"
	            android:orientation="vertical"
	            android:gravity="center_horizontal" >
	            <ImageView
	                android:layout_width="34dp"
	                android:layout_height="34dp"
	                android:src="@mipmap/umeng_socialize_qq_on" />
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="QQ登录"
	                android:textSize="12sp"
	                android:textColor="#333" />
	        </LinearLayout>
	        <LinearLayout
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1.0"
	            android:orientation="vertical"
	            android:gravity="center_horizontal" >
	            <ImageView
	                android:layout_width="34dp"
	                android:layout_height="34dp"
	                android:src="@mipmap/umeng_socialize_wechat" />
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="微信登录"
	                android:textSize="12sp"
	                android:textColor="#333" />
	        </LinearLayout>
	    </LinearLayout>
	</RelativeLayout>
	<LinearLayout
	    android:id="@+id/ll_line"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginLeft="16dp"
	    android:layout_marginRight="16dp"
	    android:layout_above="@id/rl_login"
	    android:layout_marginBottom="48dp" >
	    <View
	        android:layout_width="0dp"
	        android:layout_height="0.5dp"
	        android:layout_weight="1.0"
	        android:background="@color/light_gray"
	        android:layout_gravity="center_vertical" />
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="16dp"
	        android:layout_marginRight="16dp"
	        android:text="使用第三方登录"
	        android:textSize="14sp"
	        android:textColor="#333" />
	    <View
	        android:layout_width="0dp"
	        android:layout_height="0.5dp"
	        android:layout_weight="1.0"
	        android:background="@color/light_gray"
	        android:layout_gravity="center_vertical" />
	</LinearLayout>
	</RelativeLayout>
</LinearLayout>
