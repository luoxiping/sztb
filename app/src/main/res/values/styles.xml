<resources>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
            android:Theme.Light.NoTitleBar
        -->
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="topbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/text_green_selector</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="buy_history_tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@drawable/text_main_selector</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    
    <style name="bottombar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@drawable/text_main_selector</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">bottom|center_horizontal</item>
    </style>
    
    <style name="bottombar2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#a7a7a7</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">bottom|center_horizontal</item>
    </style>
    
    <!-- NumberProgressBar进度条相关style -->
    <style name="NumberProgressBar_Default">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="max">10</item>
        <item name="progress">0</item>
    </style>

</resources>
